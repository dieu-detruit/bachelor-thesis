seam_radius = math.sqrt(-4 * p * (seam - p - f2))
exit_radius = b * math.sqrt((f1 - WD - (f1 + f2) / 2)**2 / a**2 - 1.0)
ring_radius = seam_radius * WD / (f1 - seam)

